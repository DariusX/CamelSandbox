<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">
  

	<persistence-unit name="test1jpa">
		<class>com.zerses.camelsandbox.jpa.Person</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/test1" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="${DBPASS}" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

		</properties>
	</persistence-unit>
</persistence>
